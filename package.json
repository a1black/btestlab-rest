{
  "name": "btestlab-rest",
  "version": "0.1.0",
  "private": true,
  "description": "REST API to manage laboratoty analysis results provided by a blood clinic.",
  "author": "a1black",
  "license": "MIT",
  "keywords": [
    "btestlab",
    "service",
    "restful",
    "express",
    "mongo"
  ],
  "repository": "github:a1black/btestlab-rest",
  "homepage": "https://github.com/a1black/btestlab-rest#readme",
  "bugs": {
    "url": "https://github.com/a1black/btestlab-rest/issues"
  },
  "main": "src/index.js",
  "files": [
    "src",
    "types/index.d.ts"
  ],
  "types": "types",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --exec npx node -- --inspect=0.0.0.0 bin/index.js | pino-pretty -c -t",
    "lint": "eslint src --ignore-path .gitignore",
    "pretty": "prettier --check --ignore-path .gitignore src",
    "start": "NODE_ENV=production node bin/index.js",
    "test": "NODE_ENV=test jest"
  },
  "engines": {
    "node": ">=16"
  },
  "os": [
    "linux"
  ],
  "type": "commonjs",
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^5.0.0-beta.1",
    "express-jwt": "^7.7.5",
    "http-errors": "^2.0.0",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.get": "^4.4.2",
    "mongodb": "^4.8.1",
    "node-polyglot": "^2.4.2",
    "pino": "^8.4.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node-polyglot": "^2.4.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.15",
    "pre-commit": "^1.2.2",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4"
  },
  "nodemonConfig": {
    "delay": "2500",
    "ignore": [
      "*.test.js"
    ],
    "verbose": true,
    "watch": "src"
  },
  "pre-commit": [
    "pretty",
    "lint"
  ]
}
